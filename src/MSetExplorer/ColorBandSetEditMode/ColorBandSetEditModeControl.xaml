<UserControl x:Class="MSetExplorer.ColorBandSetEditModeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MSetExplorer"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <RadioButton Name="rdoBtnOffset" HorizontalAlignment="Center" Width="55" FontSize="14" Height="23" Margin="0" Style="{StaticResource {x:Type ToggleButton}}" 
                         Checked="rdoBtnOffset_Checked" >Offsets</RadioButton>
            
            <RadioButton Name="rdoBtnColor" HorizontalAlignment="Center" Width="55" FontSize="14" Height="23" Margin="8,0"  Style="{StaticResource {x:Type ToggleButton}}"
                         Checked="rdoBtnColor_Checked" >Colors</RadioButton>
            
            <RadioButton Name="rdoBtnBands" HorizontalAlignment="Center" Width="55" FontSize="14" Height="23" Margin="0"  Style="{StaticResource {x:Type ToggleButton}}"
                         Checked="rdoBtnBands_Checked" >Bands</RadioButton>
            
        </StackPanel>
    </Grid>
</UserControl>
