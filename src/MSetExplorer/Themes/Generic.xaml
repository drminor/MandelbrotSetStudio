<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MSetExplorer">


    <Style TargetType="{x:Type local:BitmapGridControl2}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:BitmapGridControl2}">
                    <Border BorderThickness="1" BorderBrush="ForestGreen">

                        <ContentPresenter x:Name="BitmapGridControl_Content">
                            <ContentPresenter.Content>
                                <Canvas x:Name="bmgcCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent">
                                    <Image x:Name="bmgcImage" />
                                </Canvas>

                            </ContentPresenter.Content>
                        </ContentPresenter>

                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>