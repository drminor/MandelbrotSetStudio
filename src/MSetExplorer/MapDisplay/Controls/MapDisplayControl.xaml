<UserControl x:Class="MSetExplorer.MapDisplayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MSetExplorer"
             mc:Ignorable="d" 
             d:DesignHeight="1100" d:DesignWidth="1100"
             x:Name="Mdc">
    <Grid>



            <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="Black">
            <Canvas Name="MainCanvas"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent">
                <Image x:Name="myImage" Source="{Binding Bitmap}"/>
            </Canvas>
        </Border>
    </Grid>
</UserControl>

    
