<UserControl x:Class="MSetExplorer.MapScrollControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MSetExplorer"
             mc:Ignorable="d" 
             d:DesignHeight="1100" d:DesignWidth="1100">
    <Grid>
        <DockPanel>

            <DockPanel DockPanel.Dock="Bottom">
                <Button DockPanel.Dock="Right" Width="18"/>

                <ScrollBar DockPanel.Dock="Right" Orientation="Horizontal" x:Name="HScrollBar"/>

            </DockPanel>
            
            <ScrollBar DockPanel.Dock="Right" Orientation="Vertical" x:Name="VScrollBar" Width="18"/>

            <Border BorderThickness="1" BorderBrush="Black">
                <local:MapSectionDisplayControl x:Name="mapDisplay1"></local:MapSectionDisplayControl>
            </Border>
        </DockPanel>
    </Grid>
</UserControl>
