<UserControl x:Class="MSetExplorer.CbshZoomControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MSetExplorer"
             mc:Ignorable="d" d:Height="240" >
    <Grid Background="Transparent">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Margin="5,0" HorizontalAlignment="Center">Zoom</TextBlock>
                
                <StackPanel Grid.Row="1" HorizontalAlignment="Left" Orientation="Horizontal" VerticalAlignment="Stretch" Margin="5,0,5,5" x:Name="dispSecZoom">
            <TextBlock x:Name="textBlock1" VerticalAlignment="Center" >0.015625</TextBlock>
                    <ScrollBar x:Name="scrollBar1" Margin="5,0,0,0" Orientation="Vertical" Minimum="1" Maximum="4" Value="1"/>
                </StackPanel>
    </Grid>
</UserControl>
