<UserControl x:Class="MSetExplorer.CbshScrollControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MSetExplorer"
             mc:Ignorable="d" 
             d:DesignHeight="240" d:DesignWidth="800">
    <Grid>
        <DockPanel>
            <ScrollBar DockPanel.Dock="Bottom" Orientation="Horizontal" Height="18" x:Name="HScrollBar"/>

            <Border BorderBrush="Black" BorderThickness="0, 0, 0, 0.75">
                <local:CbshDisplayControl x:Name="cbshDisplayControl1"/>
            </Border>
        </DockPanel>
    </Grid>
</UserControl>
